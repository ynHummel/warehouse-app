<h1>Novo Galp√£o</h1>

<% if @warehouse.errors.any?  %>
  <span> Verifique os campos abaixo: </span>
  <ul>
    <% @warehouse.errors.full_messages.each do |msg|  %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @warehouse do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :code %>
    <%= form.text_field :code %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  <div>
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>
  <div>
    <%= form.label :state %>
    <%= form.text_field :state %>
  </div>
  <div>
    <%= form.label :postal_code %>
    <%= form.text_field :postal_code %>
  </div>
  <div>
    <%= form.label :total_area %>
    <%= form.number_field :total_area %>
  </div>
  <div>
    <%= form.label :useful_area %>
    <%= form.number_field :useful_area %>
  </div>
  <div id="categories">
    <%= form.label :product_category_ids, 'Categorias' %>
    <%= form.collection_check_boxes :product_category_ids, @categories, :id, :name %>
  </div>
  <div>
    <%= form.submit 'Salvar'  %>
  </div>
<% end  %>