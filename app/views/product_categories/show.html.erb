<h1> <%= @product_category.name %> </h1>

<h2> Produtos nessa categoria:</h2>

<% if @product_category.product_types.empty? %>
  <p>NÃ£o existem produtos nessa categoria</p>
<% else %>

  <table class="ls-table ls-table-striped">
    <tr>
      <th scope="col">Produto</th>
      <th scope="col">SKU</th>
    </tr>
    <% @product_category.product_types.each do |p| %>
      <tr>
        <td scope="row"> <%= link_to p.name, product_type_path(p.id) %></td>
        <td scope="row"><%= p.sku %></td>
      </tr>
    <% end %>
  </table>
<% end  %>

